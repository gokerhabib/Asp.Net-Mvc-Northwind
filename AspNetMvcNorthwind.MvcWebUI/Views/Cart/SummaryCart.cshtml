@model AspNetMvcNorthwind.Entities.Cart

<div class="col-md-12 d-flex align-items-center">
    <div class="col-md-9">
        <span class="text-white"><b>Your Cart @(@Model.Lines.Sum(a => a.Quantity))</b> : @Model.Total.ToString("c");</span>
    </div>
    <div class="col-md-3">
        @Html.ActionLink("Checkout","Index","Cart",new {@class="btn btn-light btn-sm"})
    </div>
    
</div>